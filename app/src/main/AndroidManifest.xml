<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.pacificu.chordinate.chordinate" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name=".LoadScreenActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainMenuActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name=".AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity
            android:name=".KeyboardActivity"
            android:label="@string/title_activity_keyboard"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".KeyboardReviewActivity"
            android:label="@string/title_activity_keyboard_review"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".CompositionsActivity"
            android:label="@string/title_activity_compositions"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".RecordActivity" >
        </activity>

        <service
            android:name=".SoundService"
            android:enabled="true"
            android:exported="true" >
        </service>


    </application>

</manifest>
